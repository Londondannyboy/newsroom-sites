---
import { sql } from '../../lib/db';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/');
}

// Fetch the company profile
const companyResult = await sql`
  SELECT
    id,
    name,
    slug,
    type,
    company_type,
    description,
    founded_year,
    headquarters,
    website_url,
    logo_url,
    header_image_url,
    specializations,
    overview,
    key_facts,
    status,
    created_at,
    updated_at,
    geographic_focus
  FROM companies
  WHERE slug = ${slug}
    AND (company_type = 'other' OR type != 'placement_agent')
  LIMIT 1
`;

const company = companyResult[0];

if (!company) {
  return Astro.redirect('/');
}

// Parse key_facts if it's JSONB
const keyFacts = typeof company.key_facts === 'string'
  ? JSON.parse(company.key_facts)
  : company.key_facts;

const services = keyFacts?.services || [];
const achievements = keyFacts?.achievements || [];
const people = keyFacts?.people || [];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{company.name} - Relocation Services Profile | Relocation.Guide</title>
  <meta name="description" content={company.description || `${company.name} - Professional relocation services`}>
</head>
<body class="bg-gradient-to-br from-gray-50 to-blue-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-indigo-600">
            <a href="/">Relocation.Guide</a>
          </h1>
        </div>
        <div class="flex items-center space-x-8">
          <a href="/" class="text-gray-700 hover:text-indigo-600 font-medium">Home</a>
          <a href="/articles" class="text-gray-700 hover:text-indigo-600 font-medium">Articles</a>
          <a href="/companies" class="text-gray-700 hover:text-indigo-600 font-medium">Services</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Company Profile -->
  <article class="py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Header Section -->
      <header class="bg-white rounded-xl shadow-md p-8 mb-8 border-t-4 border-indigo-500">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <!-- Company Logo -->
            {company.logo_url && (
              <div class="mb-6">
                <img
                  src={company.logo_url}
                  alt={`${company.name} logo`}
                  class="h-16 w-auto"
                />
              </div>
            )}

            <!-- Company Name & Type -->
            <div class="mb-4">
              <span class="inline-block bg-indigo-100 text-indigo-800 text-xs font-semibold px-3 py-1 rounded-full mb-3">
                Relocation Services
              </span>
              <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-3 leading-tight">
                {company.name}
              </h1>
              {company.description && (
                <p class="text-xl text-gray-600 leading-relaxed">
                  {company.description}
                </p>
              )}
            </div>

            <!-- Quick Facts -->
            <div class="flex flex-wrap gap-6 text-sm text-gray-600 mt-6">
              {company.founded_year && (
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span class="font-semibold mr-2">Founded:</span>
                  <span>{company.founded_year}</span>
                </div>
              )}
              {company.headquarters && company.headquarters !== 'Unavailable from provided context' && (
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span class="font-semibold mr-2">Headquarters:</span>
                  <span>{company.headquarters}</span>
                </div>
              )}
              {company.website_url && company.website_url !== 'Unavailable from provided context' && (
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                  <span class="font-semibold mr-2">Website:</span>
                  <a href={company.website_url} target="_blank" rel="noopener noreferrer" class="text-indigo-600 hover:underline font-medium">
                    {company.website_url.replace(/^https?:\/\//, '').replace(/\/$/, '')}
                  </a>
                </div>
              )}
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- Left Column - Main Content -->
        <div class="lg:col-span-2 space-y-8">

          <!-- Overview Section -->
          {company.overview && (
            <section class="bg-white rounded-xl shadow-md p-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-6 h-6 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Overview
              </h2>
              <div class="prose prose-lg max-w-none">
                <p class="text-gray-700 leading-relaxed">{company.overview}</p>
              </div>
            </section>
          )}

          <!-- Services Section -->
          {services.length > 0 && (
            <section class="bg-white rounded-xl shadow-md p-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                Services Offered
              </h2>
              <ul class="space-y-3">
                {services.map((service: string) => (
                  <li class="flex items-start">
                    <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-gray-700">{service}</span>
                  </li>
                ))}
              </ul>
            </section>
          )}

          <!-- Specializations Section -->
          {company.specializations && company.specializations.length > 0 && (
            <section class="bg-white rounded-xl shadow-md p-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
                Specializations
              </h2>
              <div class="flex flex-wrap gap-2">
                {company.specializations.map((spec: string) => (
                  <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-gradient-to-r from-indigo-50 to-purple-50 text-indigo-700 border border-indigo-200">
                    {spec}
                  </span>
                ))}
              </div>
            </section>
          )}

          <!-- Achievements Section -->
          {achievements.length > 0 && (
            <section class="bg-white rounded-xl shadow-md p-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-6 h-6 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
                Achievements
              </h2>
              <ul class="space-y-3">
                {achievements.map((achievement: string) => (
                  <li class="flex items-start">
                    <svg class="h-6 w-6 text-indigo-500 mr-3 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-700">{achievement}</span>
                  </li>
                ))}
              </ul>
            </section>
          )}
        </div>

        <!-- Right Column - Sidebar -->
        <div class="space-y-8">

          <!-- Geographic Focus -->
          {company.geographic_focus && company.geographic_focus.length > 0 && (
            <section class="bg-gradient-to-br from-indigo-500 to-purple-600 text-white rounded-xl shadow-md p-6">
              <h3 class="text-lg font-bold mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Countries We Serve
              </h3>
              <div class="space-y-2">
                {company.geographic_focus.map((region: string) => (
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span>{region}</span>
                  </div>
                ))}
              </div>
            </section>
          )}

          <!-- Team Section -->
          {people.length > 0 && (
            <section class="bg-white rounded-xl shadow-md p-6">
              <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                Our Team
              </h3>
              <div class="space-y-3">
                {people.map((person: any) => (
                  <div class="border-l-4 border-indigo-500 pl-3">
                    <div class="font-medium text-gray-900">{person.name}</div>
                    {person.title && <div class="text-sm text-gray-600">{person.title}</div>}
                  </div>
                ))}
              </div>
            </section>
          )}

          <!-- Call to Action -->
          <section class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl shadow-md p-6 border border-green-200">
            <h3 class="text-lg font-bold text-gray-900 mb-3">Ready to relocate?</h3>
            <p class="text-sm text-gray-600 mb-4">Get in touch with {company.name} to start your relocation journey.</p>
            {company.website_url && company.website_url !== 'Unavailable from provided context' && (
              <a
                href={company.website_url}
                target="_blank"
                rel="noopener noreferrer"
                class="block w-full bg-indigo-600 hover:bg-indigo-700 text-white text-center font-medium py-3 px-4 rounded-lg transition-colors"
              >
                Visit Website →
              </a>
            )}
          </section>
        </div>
      </div>

      <!-- Back Link -->
      <div class="mt-12">
        <a href="/" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium">
          ← Back to home
        </a>
      </div>
    </div>
  </article>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-400">© {new Date().getFullYear()} Relocation.Guide. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
