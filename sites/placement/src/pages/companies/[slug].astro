---
import { sql } from '../../lib/db';

const { slug } = Astro.params;

// SEO anchor text variations
const anchorTexts = [
  "View all leading placement agents",
  "Top private equity placement agents",
  "Best placement agents directory",
  "Complete list of placement agents",
  "Leading fund placement firms"
];
const anchorText = anchorTexts[Math.floor(Math.random() * anchorTexts.length)];

if (!slug) {
  return Astro.redirect('/');
}

// Fetch company with V2 payload structure
const companyResult = await sql`
  SELECT
    id,
    name,
    slug,
    logo_url,
    header_image_url,
    payload
  FROM companies
  WHERE slug = ${slug}
    AND (company_type = 'placement_agent' OR type = 'placement_agent')
  LIMIT 1
`;

const companyRow = companyResult[0];

if (!companyRow) {
  return Astro.redirect('/');
}

// Parse V2 payload
const payload = typeof companyRow.payload === 'string'
  ? JSON.parse(companyRow.payload)
  : companyRow.payload;

// Extract data from V2 structure
const company = {
  id: companyRow.id,
  name: companyRow.name,
  slug: companyRow.slug,
  logo_url: companyRow.logo_url || payload.logo_url,
  header_image_url: companyRow.header_image_url || payload.featured_image_url,
  // V2 structured fields
  legal_name: payload.legal_name || companyRow.name,
  website: payload.website,
  industry: payload.industry,
  headquarters_city: payload.headquarters_city,
  headquarters_country: payload.headquarters_country,
  founded_year: payload.founded_year,
  employee_range: payload.employee_range,
  // V2 narrative sections
  profile_sections: payload.profile_sections || {},
};

// Get overview for meta description
const overviewSection = company.profile_sections.overview;
const metaDescription = overviewSection?.content?.substring(0, 160) || `${company.name} - Leading placement agent profile`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{company.name} - Placement Agent Profile | Placement</title>
  <meta name="description" content={metaDescription}>
</head>
<body class="bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-blue-600">
            <a href="/">Placement</a>
          </h1>
        </div>
        <div class="flex items-center space-x-8">
          <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
          <a href="/articles" class="text-gray-700 hover:text-blue-600 font-medium">Articles</a>
          <a href="/companies" class="text-blue-600 font-medium">Companies</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Company Profile -->
  <article class="py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Header Section -->
      <header class="bg-white rounded-lg shadow-sm p-8 mb-8">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <!-- Company Logo -->
            {company.logo_url && (
              <div class="mb-6">
                <img
                  src={company.logo_url}
                  alt={`${company.name} logo`}
                  class="h-16 w-auto"
                />
              </div>
            )}

            <!-- Company Name & Type -->
            <div class="mb-4">
              <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded mb-3">
                Placement Agent
              </span>
              <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-3 leading-tight">
                {company.name}
              </h1>
            </div>

            <!-- Quick Facts -->
            <div class="flex flex-wrap gap-6 text-sm text-gray-600 mt-6">
              {company.founded_year && (
                <div class="flex items-center">
                  <span class="font-semibold mr-2">Founded:</span>
                  <span>{company.founded_year}</span>
                </div>
              )}
              {company.headquarters_city && (
                <div class="flex items-center">
                  <span class="font-semibold mr-2">Headquarters:</span>
                  <span>{company.headquarters_city}, {company.headquarters_country}</span>
                </div>
              )}
              {company.industry && (
                <div class="flex items-center">
                  <span class="font-semibold mr-2">Industry:</span>
                  <span>{company.industry}</span>
                </div>
              )}
              {company.employee_range && (
                <div class="flex items-center">
                  <span class="font-semibold mr-2">Employees:</span>
                  <span>{company.employee_range}</span>
                </div>
              )}
              {company.website && (
                <div class="flex items-center">
                  <span class="font-semibold mr-2">Website:</span>
                  <a href={company.website} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">
                    {company.website.replace(/^https?:\/\//, '').replace(/\/$/, '')}
                  </a>
                </div>
              )}
            </div>
          </div>
        </div>
      </header>

      <!-- V2 Dynamic Content - Render all profile sections -->
      <div class="grid grid-cols-1 gap-8">
        {Object.entries(company.profile_sections).map(([key, section]: [string, any]) => (
          <section class="bg-white rounded-lg shadow-sm p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">{section.title}</h2>

            <!-- Render markdown content as formatted text -->
            <div class="prose prose-lg max-w-none">
              <div class="text-gray-700 leading-relaxed whitespace-pre-wrap" set:html={
                section.content
                  .replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>')
                  .replace(/\n\n/g, '</p><p class="mt-4">')
                  .replace(/^(.+)$/, '<p>$1</p>')
                  .replace(/^- (.+)/gm, '<li>$1</li>')
                  .replace(/(<li>.*<\/li>)/s, '<ul class="list-disc list-inside space-y-2 mt-4">$1</ul>')
              }></div>
            </div>

            <!-- Confidence indicator (optional, can be hidden) -->
            {section.confidence && section.confidence < 0.8 && (
              <div class="mt-4 text-xs text-gray-500">
                Confidence: {Math.round(section.confidence * 100)}%
              </div>
            )}
          </section>
        ))}

        <!-- Fallback if no sections -->
        {Object.keys(company.profile_sections).length === 0 && (
          <section class="bg-white rounded-lg shadow-sm p-8">
            <p class="text-gray-600">Profile information for {company.name} is being generated. Please check back soon.</p>
          </section>
        )}
      </div>

      <!-- Back Link with SEO -->
      <div class="mt-12">
        <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
          ← {anchorText}
        </a>
      </div>
    </div>
  </article>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        <div>
          <h3 class="text-lg font-bold mb-4">Placement</h3>
          <p class="text-gray-400 text-sm">Your source for private equity placement agent insights and industry news.</p>
        </div>
        <div>
          <h3 class="text-lg font-bold mb-4">Navigate</h3>
          <ul class="space-y-2 text-sm">
            <li><a href="/" class="text-gray-400 hover:text-white">Home</a></li>
            <li><a href="/articles" class="text-gray-400 hover:text-white">Articles</a></li>
            <li><a href="/companies" class="text-gray-400 hover:text-white">Companies Directory</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-bold mb-4">Resources</h3>
          <ul class="space-y-2 text-sm">
            <li><a href="/companies" class="text-gray-400 hover:text-white">Top Placement Agents</a></li>
            <li><a href="/articles" class="text-gray-400 hover:text-white">Industry News</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-gray-800 pt-8 text-center">
        <p class="text-gray-400 text-sm">© {new Date().getFullYear()} Placement. All rights reserved.</p>
      </div>
    </div>
  </footer>
</body>
</html>
