---
import { sql } from '../lib/db';

// Fetch homepage content
const homepageContent = await sql`
  SELECT
    section_type,
    title,
    subtitle,
    content
  FROM homepage_content
  WHERE site = 'puppy'
    AND is_active = true
  ORDER BY section_order ASC
`;

// Fetch articles with images - supporting both JSONB column and legacy tables
const articles = await sql`
  SELECT
    a.id,
    a.title,
    a.excerpt,
    a.slug,
    a.published_at,
    a.created_at,
    a.article_angle,
    a.featured_asset_url,
    a.featured_asset_alt
  FROM articles a
  WHERE a.app = 'puppy'
    AND a.status = 'published'
  ORDER BY a.published_at DESC NULLS LAST, a.created_at DESC
  LIMIT 6
`;

const sections = {
  hero: homepageContent.find((s: any) => s.section_type === 'hero'),
  intro: homepageContent.find((s: any) => s.section_type === 'intro'),
  coverage: homepageContent.find((s: any) => s.section_type === 'coverage'),
  providers: homepageContent.find((s: any) => s.section_type === 'providers'),
  howItWorks: homepageContent.find((s: any) => s.section_type === 'how_it_works'),
  costs: homepageContent.find((s: any) => s.section_type === 'costs'),
  choosing: homepageContent.find((s: any) => s.section_type === 'choosing'),
  whyImportant: homepageContent.find((s: any) => s.section_type === 'why_important'),
  breeds: homepageContent.find((s: any) => s.section_type === 'breeds'),
  faq: homepageContent.find((s: any) => s.section_type === 'faq')
};
---

<!DOCTYPE html>
<html lang="en-GB">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Puppy - Your Guide to Dog Insurance in the UK</title>
  <meta name="description" content="Find the best dog insurance and puppy insurance in the UK. Compare providers, coverage options, and get expert advice on protecting your furry friend.">
</head>
<body class="bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-blue-600">Puppy</h1>
        </div>
        <div class="flex items-center space-x-8">
          <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
          <a href="/articles" class="text-gray-700 hover:text-blue-600 font-medium">Articles</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  {sections.hero && ( 
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
            {sections.hero.title}
          </h2>
          <p class="text-xl md:text-2xl text-blue-100 mb-8 leading-relaxed">
            {sections.hero.subtitle}
          </p>
          {sections.hero.content?.cta_text && ( 
            <div class="bg-blue-900/50 rounded-lg p-6 mt-8">
              <h3 class="text-2xl font-semibold mb-2">{sections.hero.content.cta_text}</h3>
              {sections.hero.content.cta_description && ( 
                <p class="text-blue-100">{sections.hero.content.cta_description}</p>
              )}
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Intro Section -->
  {sections.intro && ( 
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">{sections.intro.title}</h2>
        <div class="prose prose-lg max-w-none space-y-4">
          {sections.intro.content?.paragraphs?.map((para: any) => ( 
            <p class="text-gray-700 leading-relaxed">{para.text}</p>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Coverage Types Section -->
  {sections.coverage && ( 
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.coverage.title}</h2>
          {sections.coverage.subtitle && <p class="text-xl text-gray-600">{sections.coverage.subtitle}</p>}
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sections.coverage.content?.items?.map((item: any) => ( 
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
              <h3 class="text-lg font-bold text-gray-900 mb-3">{item.title}</h3>
              <p class="text-gray-600 text-sm leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
        {sections.coverage.content?.summary && ( 
          <div class="mt-8 bg-blue-50 p-6 rounded-lg">
            <p class="text-gray-700 leading-relaxed">{sections.coverage.content.summary}</p>
          </div>
        )}
      </div>
    </section>
  )}

  <!-- Top Providers Section -->
  {sections.providers && ( 
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.providers.title}</h2>
          {sections.providers.subtitle && <p class="text-xl text-gray-600">{sections.providers.subtitle}</p>}
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {sections.providers.content?.companies?.slice(0, 10).map((company: any) => ( 
            <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
              <h3 class="text-xl font-bold text-gray-900 mb-2">{company.name}</h3>
              <div class="flex items-center gap-4 mb-3 text-sm flex-wrap">
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full font-semibold">{company.rating}</span>
                {company.price && <span class="text-gray-600">From: {company.price}</span>}
              </div>
              <p class="text-gray-700 text-sm leading-relaxed">{company.description}</p>
              {company.features && company.features.length > 0 && ( 
                <ul class="mt-3 space-y-1">
                  {company.features.slice(0, 3).map((feature: string) => ( 
                    <li class="text-xs text-gray-600 flex items-center">
                      <span class="mr-2">✓</span>
                      {feature}
                    </li>
                  ))}
                </ul>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- How It Works Section -->
  {sections.howItWorks && ( 
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.howItWorks.title}</h2>
          {sections.howItWorks.subtitle && <p class="text-xl text-gray-600">{sections.howItWorks.subtitle}</p>}
        </div>
        <div class="space-y-6">
          {sections.howItWorks.content?.steps?.map((step: any, index: number) => ( 
            <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-blue-600">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">
                  {index + 1}
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-gray-900 mb-2">{step.title}</h3>
                  <p class="text-gray-700 leading-relaxed">{step.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
        {sections.howItWorks.content?.summary && ( 
          <div class="mt-8 bg-blue-50 p-6 rounded-lg">
            <p class="text-gray-700 font-semibold">{sections.howItWorks.content.summary}</p>
          </div>
        )}
      </div>
    </section>
  )}

  <!-- Costs Section -->
  {sections.costs && ( 
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.costs.title}</h2>
          {sections.costs.subtitle && <p class="text-xl text-gray-600">{sections.costs.subtitle}</p>}
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sections.costs.content?.factors?.map((factor: any) => ( 
            <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
              <h3 class="text-lg font-bold text-gray-900 mb-3">{factor.title}</h3>
              <p class="text-gray-600 text-sm leading-relaxed">{factor.description}</p>
            </div>
          ))}
        </div>
        {sections.costs.content?.summary && ( 
          <div class="mt-8 bg-blue-50 p-6 rounded-lg">
            <p class="text-gray-700 leading-relaxed">{sections.costs.content.summary}</p>
          </div>
        )}
      </div>
    </section>
  )}

  <!-- Choosing Guide Section -->
  {sections.choosing && ( 
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.choosing.title}</h2>
          {sections.choosing.subtitle && <p class="text-xl text-gray-600">{sections.choosing.subtitle}</p>}
        </div>
        <div class="space-y-6">
          {sections.choosing.content?.tips?.map((tip: any) => ( 
            <div class="bg-white p-6 rounded-lg shadow-sm">
              <h3 class="text-lg font-bold text-gray-900 mb-3">{tip.title}</h3>
              <p class="text-gray-700 leading-relaxed">{tip.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Why Important Section -->
  {sections.whyImportant && ( 
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.whyImportant.title}</h2>
          {sections.whyImportant.subtitle && <p class="text-xl text-gray-600">{sections.whyImportant.subtitle}</p>}
        </div>
        <div class="prose prose-lg max-w-none space-y-4">
          {sections.whyImportant.content?.points?.map((point: any) => ( 
            <div class="bg-gray-50 p-6 rounded-lg">
              <h3 class="text-lg font-bold text-gray-900 mb-3">{point.title}</h3>
              <p class="text-gray-700 leading-relaxed">{point.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Breed-Specific Information Section -->
  {sections.breeds && ( 
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.breeds.title}</h2>
          {sections.breeds.subtitle && <p class="text-xl text-gray-600">{sections.breeds.subtitle}</p>}
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sections.breeds.content?.breeds?.map((breed: any) => ( 
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
              <h3 class="text-lg font-bold text-gray-900 mb-2">{breed.name}</h3>
              <p class="text-sm text-gray-600 mb-2">Avg. Cost: {breed.cost}</p>
              <p class="text-gray-700 text-sm leading-relaxed">{breed.notes}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- FAQ Section -->
  {sections.faq && ( 
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.faq.title}</h2>
          {sections.faq.subtitle && <p class="text-xl text-gray-600">{sections.faq.subtitle}</p>}
        </div>
        <div class="space-y-6">
          {sections.faq.content?.questions?.map((item: any) => ( 
            <div class="bg-gray-50 p-6 rounded-lg">
              <h3 class="text-lg font-bold text-gray-900 mb-3">{item.question}</h3>
              <p class="text-gray-700 leading-relaxed">{item.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Latest Articles -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Latest Articles</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map((article: any) => ( 
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            {article.featured_asset_url && ( 
              <img src={article.featured_asset_url} alt={article.featured_asset_alt || article.title} class="w-full h-48 object-cover" />
            )}
            <div class="p-6">
              {article.article_angle && ( 
                <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded mb-3">
                  {article.article_angle}
                </span>
              )}
              <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2">
                <a href={`/${article.slug}`} class="hover:text-blue-600">
                  {article.title}
                </a>
              </h3>
              {article.excerpt && ( 
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {article.excerpt}
                </p>
              )}
              <div class="flex items-center justify-between text-sm text-gray-500">
                <time datetime={article.published_at || article.created_at}>
                  {new Date(article.published_at || article.created_at).toLocaleDateString('en-GB', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <a href={`/${article.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
                  Read more →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      {articles.length === 0 && ( 
        <div class="text-center py-12">
          <p class="text-gray-600 text-lg">No articles published yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-400">© {new Date().getFullYear()} Puppy. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
