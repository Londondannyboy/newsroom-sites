---
import { sql } from '../lib/db';

// Fetch homepage content
const homepageContent = await sql`
  SELECT
    section_type,
    title,
    subtitle,
    content
  FROM homepage_content
  WHERE site = 'childcare'
    AND is_active = true
  ORDER BY section_order ASC
`;

// Fetch articles
const articles = await sql`
  SELECT
    a.id,
    a.title,
    a.excerpt,
    a.slug,
    a.published_at,
    a.created_at,
    a.article_angle,
    a.featured_asset_url,
    a.featured_asset_alt
  FROM articles a
  WHERE a.app = 'childcare'
    AND a.status = 'published'
  ORDER BY a.published_at DESC NULLS LAST, a.created_at DESC
  LIMIT 6
`;

const sections = {
  hero: homepageContent.find((s: any) => s.section_type === 'hero'),
  intro: homepageContent.find((s: any) => s.section_type === 'intro'),
  calculator: homepageContent.find((s: any) => s.section_type === 'calculator'),
  costs: homepageContent.find((s: any) => s.section_type === 'costs'),
  types: homepageContent.find((s: any) => s.section_type === 'types'),
  funding: homepageContent.find((s: any) => s.section_type === 'funding'),
  howToUse: homepageContent.find((s: any) => s.section_type === 'how_to_use'),
  savings: homepageContent.find((s: any) => s.section_type === 'savings'),
  regional: homepageContent.find((s: any) => s.section_type === 'regional'),
  faq: homepageContent.find((s: any) => s.section_type === 'faq')
};
---

<!DOCTYPE html>
<html lang="en-GB">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Childcare Calculator UK - Calculate Childcare Costs</title>
  <meta name="description" content="Free childcare calculator for the UK. Calculate childcare costs, compare nursery fees, and find government funding options. Essential tool for parents planning childcare expenses.">
</head>
<body class="bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-blue-600">Childcare Calculator</h1>
        </div>
        <div class="flex items-center space-x-8">
          <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
          <a href="/articles" class="text-gray-700 hover:text-blue-600 font-medium">Articles</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  {sections.hero && ( 
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
            {sections.hero.title}
          </h2>
          <p class="text-xl md:text-2xl text-blue-100 mb-8 leading-relaxed">
            {sections.hero.subtitle}
          </p>
          {sections.hero.content?.cta_text && ( 
            <div class="bg-blue-900/50 rounded-lg p-6 mt-8">
              <h3 class="text-2xl font-semibold mb-2">{sections.hero.content.cta_text}</h3>
              {sections.hero.content.cta_description && ( 
                <p class="text-blue-100">{sections.hero.content.cta_description}</p>
              )}
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Intro Section -->
  {sections.intro && ( 
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">{sections.intro.title}</h2>
        <div class="prose prose-lg max-w-none space-y-4">
          {sections.intro.content?.paragraphs?.map((para: any) => ( 
            <p class="text-gray-700 leading-relaxed">{para.text}</p>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Calculator Features Section -->
  {sections.calculator && ( 
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.calculator.title}</h2>
          {sections.calculator.subtitle && <p class="text-xl text-gray-600">{sections.calculator.subtitle}</p>}
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sections.calculator.content?.features?.map((feature: any) => ( 
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
              <h3 class="text-lg font-bold text-gray-900 mb-3">{feature.title}</h3>
              <p class="text-gray-600 text-sm leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
        {sections.calculator.content?.summary && ( 
          <div class="mt-8 bg-blue-50 p-6 rounded-lg">
            <p class="text-gray-700 leading-relaxed">{sections.calculator.content.summary}</p>
          </div>
        )}
      </div>
    </section>
  )}

  <!-- Childcare Costs Section -->
  {sections.costs && ( 
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.costs.title}</h2>
          {sections.costs.subtitle && <p class="text-xl text-gray-600">{sections.costs.subtitle}</p>}
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {sections.costs.content?.cost_types?.map((cost: any) => ( 
            <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 hover:shadow-md transition-shadow">
              <h3 class="text-xl font-bold text-gray-900 mb-2">{cost.name}</h3>
              <div class="flex items-center gap-4 mb-3 text-sm flex-wrap">
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full font-semibold">{cost.average_cost}</span>
                {cost.range && <span class="text-gray-600">Range: {cost.range}</span>}
              </div>
              <p class="text-gray-700 text-sm leading-relaxed">{cost.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Types of Childcare Section -->
  {sections.types && ( 
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.types.title}</h2>
          {sections.types.subtitle && <p class="text-xl text-gray-600">{sections.types.subtitle}</p>}
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sections.types.content?.options?.map((option: any) => ( 
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
              <h3 class="text-lg font-bold text-gray-900 mb-2">{option.name}</h3>
              <p class="text-sm text-gray-600 mb-2">Cost: {option.cost}</p>
              <p class="text-gray-700 text-sm leading-relaxed">{option.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Government Funding Section -->
  {sections.funding && ( 
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.funding.title}</h2>
          {sections.funding.subtitle && <p class="text-xl text-gray-600">{sections.funding.subtitle}</p>}
        </div>
        <div class="space-y-6">
          {sections.funding.content?.schemes?.map((scheme: any) => ( 
            <div class="bg-gray-50 p-6 rounded-lg">
              <h3 class="text-lg font-bold text-gray-900 mb-3">{scheme.name}</h3>
              <p class="text-gray-700 leading-relaxed mb-2">{scheme.description}</p>
              {scheme.eligibility && ( 
                <p class="text-sm text-gray-600"><strong>Eligibility:</strong> {scheme.eligibility}</p>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- How to Use Calculator Section -->
  {sections.howToUse && ( 
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.howToUse.title}</h2>
          {sections.howToUse.subtitle && <p class="text-xl text-gray-600">{sections.howToUse.subtitle}</p>}
        </div>
        <div class="space-y-6">
          {sections.howToUse.content?.steps?.map((step: any, index: number) => ( 
            <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-blue-600">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">
                  {index + 1}
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-gray-900 mb-2">{step.title}</h3>
                  <p class="text-gray-700 leading-relaxed">{step.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Regional Costs Section -->
  {sections.regional && ( 
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.regional.title}</h2>
          {sections.regional.subtitle && <p class="text-xl text-gray-600">{sections.regional.subtitle}</p>}
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sections.regional.content?.regions?.map((region: any) => ( 
            <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
              <h3 class="text-lg font-bold text-gray-900 mb-2">{region.name}</h3>
              <p class="text-sm text-gray-600 mb-2">Average: {region.average}</p>
              <p class="text-gray-700 text-sm leading-relaxed">{region.notes}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- FAQ Section -->
  {sections.faq && ( 
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">{sections.faq.title}</h2>
          {sections.faq.subtitle && <p class="text-xl text-gray-600">{sections.faq.subtitle}</p>}
        </div>
        <div class="space-y-6">
          {sections.faq.content?.questions?.map((item: any) => ( 
            <div class="bg-white p-6 rounded-lg shadow-sm">
              <h3 class="text-lg font-bold text-gray-900 mb-3">{item.question}</h3>
              <p class="text-gray-700 leading-relaxed">{item.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Latest Articles -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Latest Articles</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map((article: any) => ( 
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            {article.featured_asset_url && (
              <img src={article.featured_asset_url} alt={article.featured_asset_alt || article.title} class="w-full h-48 object-cover" />
            )}
            <div class="p-6">
              {article.article_angle && ( 
                <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded mb-3">
                  {article.article_angle}
                </span>
              )}
              <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2">
                <a href={`/${article.slug}`} class="hover:text-blue-600">
                  {article.title}
                </a>
              </h3>
              {article.excerpt && ( 
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {article.excerpt}
                </p>
              )}
              <div class="flex items-center justify-between text-sm text-gray-500">
                <time datetime={article.published_at || article.created_at}>
                  {new Date(article.published_at || article.created_at).toLocaleDateString('en-GB', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <a href={`/${article.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
                  Read more →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      {articles.length === 0 && ( 
        <div class="text-center py-12">
          <p class="text-gray-600 text-lg">No articles published yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-400">© {new Date().getFullYear()} Childcare Calculator. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
